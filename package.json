{
  "name": "@utkusarioglu/string-assist",
  "version": "0.0.6",
  "description": "Extends JS built-in string prototype with some handy functionality",
  "main": "index.js",
  "author": {
    "name": "Utku Sarioglu",
    "email": "utkusarioglu@gmail.com",
    "url": "http://www.utkusarioglu.com"
  },
  "scripts": {
    "clean": "shx rm -rf _bundles lib lib-esm index.d.ts package-lock.json",
    "declaration": "dts-bundle --name @utkusarioglu/string-assist --main lib/index.d.ts --out ../index.d.ts",
    "build": "npm run clean && tsc && tsc -m es6 --outDir lib-esm && webpack && npm run declaration",
    "test": "jest",
    "test-": "npm run build && jest",
    "build-publish": "npm version patch --force && npm run build && npm publish"
  },
  "devDependencies": {
    "@types/jest": "24.0.24",
    "@types/node": "^12.12.21",
    "dts-bundle": "0.7.3",
    "jest": "24.9.0",
    "shx": "^0.3.2",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utkusarioglu/StringAssist.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utkusarioglu/StringAssist/issues"
  },
  "homepage": "https://github.com/utkusarioglu/StringAssist#readme"
}
